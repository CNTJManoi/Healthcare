<UserControl x:Class="Healthcare.WPF.Views.Pages.Main.Models.DoctorModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Healthcare.WPF.Views.Pages.Main.Models"
             mc:Ignorable="d" >
    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
        <Image Source="{Binding Path}" Width="100" Height="150" HorizontalAlignment="Center" Stretch="Fill" />
        <TextBlock Text="{Binding Specialization}" HorizontalAlignment="Center"/>
        <TextBlock Text="{Binding Name}" HorizontalAlignment="Center"/>
        <TextBlock Text="{Binding Time}" HorizontalAlignment="Center"/>
    </StackPanel>
</UserControl>
